<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Inkluder jQuery-biblioteket fra en CDN -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        /* Definer generelle stiler for HTML-dokumentet */
        html, body {
            background-color: #d9e5eb;
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            color: #313638;
        }

        /* Stiler for containeren som holder statuskortene */
        .status-container {
            display: flex;
            flex-wrap: wrap;
            margin: 150px;
        }

        /* Stiler for hvert statuskort */
        .status-card {
            border: 1px solid #ccc;
            border-radius: 8px;
            margin: 10px auto;
            padding: 20px;
            width: 210px;
            height: 200px;
            transition: box-shadow 0.3s ease;
            cursor: pointer;
        }

        /* Stiler for statuskortet når det hoveres over */
        .status-card:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        /* Farge for "ok" status */
        .status-ok {
            background-color: #8aff8a;
        }

        /* Farge for "advarsel" status */
        .status-warning {
            background-color: #ffd701;
        }

        /* Farge for "feil" status */
        .status-error {
            background-color: #ff8a8a;
        }

        /* Stiler for utvidet visning av et statuskort */
        .expanded {
            width: 400px;
            height: 200px;
        }

        /* Skjul ekstra informasjon som standard */
        .additional-info {
            display: none;
            margin-top: 10px;
        }

        /* Vis ekstra informasjon når kortet er utvidet */
        .expanded .additional-info {
            display: block;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workshop Status</title>
</head>
<body>
    <!-- Container for statuskortene -->
    <div class="status-container">
        <!-- Statuskort 1 -->
        <div class="status-card status-ok" data-expanded="false">
            <h3>Drilling Maskin</h3>
            <p>Status: Aktiv</p>
            <div class="additional-info">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</div>
        </div>

        <!-- Statuskort 2 -->
        <div class="status-card status-warning" data-expanded="false">
            <h3>CT 80 teststation</h3>
            <p>Status: Reparasjon</p>
            <div class="additional-info">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</div>
        </div>

        <!-- Statuskort 3 -->
        <div class="status-card status-error" data-expanded="false">
            <h3>KEB 5.1 Kjetting Maskin</h3>
            <p>Status: Ute av Drift</p>
            <div class="additional-info">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</div>
        </div>

        <!-- Statuskort 4 -->
        <div class="status-card status-ok" data-expanded="false">
            <h3>IGLAND PRONTO Maskin</h3>
            <p>Status: Aktiv</p>
            <div class="additional-info">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</div>
        </div>

        <!-- Statuskort 5 -->
        <div class="status-card status-error" data-expanded="false">
            <h3>FRAM Alloy Kjetting Maskin</h3>
            <p>Status: Inaktiv</p>
            <div class="additional-info">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</div>
        </div>
    </div>

    <!-- jQuery-skript for å legge til interaktivitet -->
    <script>
        $(document).ready(function () {
            // Legg til en klikk-hendelse til hvert statuskort
            $(".status-card").click(function () {
                // Hent verdien av dataattributtet "expanded"
                var expanded = $(this).data("expanded");
                // Bytt klassen "expanded" og oppdater dataattributtet basert på nåværende verdi
                $(this).toggleClass("expanded", !expanded);
                $(this).data("expanded", !expanded);
            });
        });
    </script>
</body>
</html>
