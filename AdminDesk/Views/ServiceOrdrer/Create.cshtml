@model Nøsted_Serviceordre_Behandling.Models.Serviceordre

@{
    ViewData["Title"] = "Create";
}

<!-- Styling for the page -->
<style>
    html, body {
        background-color: #d9e5eb;
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        color: #313638;
    }
</style>

<!-- Page heading -->
<h1>Create</h1>

<h4>Serviceordre</h4>
<hr />

<!-- Form for creating a new service order -->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!-- Validation summary for model errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Form fields for service order properties with corresponding validation messages -->
            <div class="form-group">
                <label asp-for="Navn" class="control-label"></label>
                <input asp-for="Navn" class="form-control" />
                <span asp-validation-for="Navn" class="text-danger"></span>
            </div>

            <!-- Repeat the above structure for other properties of the service order -->

            <!-- Submit button for creating the service order -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Link to navigate back to the list of service orders -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Section for including scripts, particularly validation scripts -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
