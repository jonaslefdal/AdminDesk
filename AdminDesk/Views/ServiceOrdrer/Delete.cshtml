@model Nøsted_Serviceordre_Behandling.Models.Serviceordre

@{
    ViewData["Title"] = "Delete";
}

<!-- Styling for the page -->
<style>
    html, body {
        background-color: #d9e5eb;
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        color: #313638;
    }

    h1, h3 {
        text-align: center;
    }

    /* Styling for buttons */
    .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #88afc2;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        color: black;
    }

    .button-container {
        text-align: center;
    }

    /* Hover effect for buttons */
    .button:hover {
        background-color: rgb(251, 114, 19);
        color: #9cb7c2;
    }
</style>

<!-- Heading for the page -->
<h1>Delete</h1>

<!-- Confirmation message -->
<h3>Er du sikker på at du vil slette?</h3>

<!-- Displaying details of the service order to be deleted -->
<div>
    <hr />
    <!-- Definition list for displaying service order details -->
    <dl class="row">
        <!-- Display service order property names and values -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Navn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Navn)
        </dd>
        <!-- Repeat the above structure for other properties of the service order -->
    </dl>

    <!-- Form for confirming the deletion -->
    <form asp-action="Delete">
        <!-- Hidden input for the service order ID -->
        <input type="hidden" asp-for="id" />

        <!-- Button container for delete and back to list buttons -->
        <div class="button-container">
            <input type="submit" value="Delete" class="button" />
            <a asp-action="Index" class="button">Back to List</a>
        </div>
    </form>
</div>
